<div class="container">
    <h1>My Music Library</h1>
</div>
<div class="container">
    <div class="row">
        <div class="col-2 border border-secondary">
            <div class="form-check">
                <input class="form-check-input" type="radio" name="radioForm" value="artist" id="flexCheckArtist" checked>
                <label class="form-check-label" for="flexCheckArtist">Artists</label>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="radio" name="radioForm" value="album" id="flexCheckAlbum">
                <label class="form-check-label" for="flexCheckAlbum">Albums</label>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="radio" name="radioForm" value="song" id="flexCheckSongs">
                <label class="form-check-label" for="flexCheckSongs">Songs</label>
            </div>
        </div>
        <div class="col-10 border border-secondary">
            <table width="75%">
                <tr>
                    <td>
                        <select id="artist-selector" name="artist-selector" size="10">
                        </select>
                    </td>
                </tr>

            </table>
        </div>
    </div>
</div>